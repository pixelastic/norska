#!/usr/bin/env node
/* eslint-disable import/no-commonjs */
const norska = require('../build/lib/index').default;
const minimist = require('minimist');
const _ = require('lodash');

// Parse options from the commandline
// --from: the source diretory$
// --to: the destination directory
const args = _.omit(minimist(process.argv.slice(2)), ['_']);

(async () => {
  await norska.run(args);
})();
